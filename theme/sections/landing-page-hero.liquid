<div class='take-back-hero page-width'>
    <div class="hero-text">
      <h1 
        {% if section.settings.drop-shadow == true%}
        style="text-shadow: 0px 1px 12px rgba(0, 0, 0, 0.309443);"
        {%endif%}
        class="take-back-hero-title">
          {{ section.settings.heading }}
      </h1>
      <p class="text-lg-p1 text-sm-h4">
       {{ section.settings.paragraph }}
      </p>
      <a href="/products/tbb" class="btn text-lg-b2 text-sm-b1">Get a Bag</a>
      <a  class="btn text-lg-b2 text-sm-b1 js-modal-open-quick-modal-000000000000" id="quick-tbb-button" style="opacity: 1;">Quick View</a>
     
    </div>
  </div>
  
  {%- render 'tbb-quick-shop-modal' -%}
  
  {% schema %}
   {
      "name": "Hero Section",
      "settings": [
          {
              "type": "text",
              "label": "Headline Text",
              "id": "heading",
              "default": ""
          },
          {
            "type": "color",
            "id": "heading-text-color",
            "label": "Heading Text Color",
            "default": "#ffffff"
          },
          {
            "type": "checkbox",
            "id": "drop-shadow",
            "label": "Heading Shadow",
            "default": true
          },
          {
            "type": "textarea",
            "label": "Paragraph Text",
            "id": "paragraph",
            "default": ""
          },
          {
              "type": "color",
              "id": "text-color",
              "label": "Paragraph Text Color",
              "default": "#ffffff"
          },
          {
            "type": "image_picker",
            "label": "Desktop Image",
            "id": "desktop-image"
          },
          {
            "type": "image_picker",
            "label": "Tablet Image",
            "id": "tablet-image"
          },
          {
            "type": "image_picker",
            "label": "Mobile Image",
            "id": "mobile-image"
          }
      ]
  }
  {% endschema %}
  
  
  <style>
    .take-back-hero{
      width: 100%;
      height: 640px;
      background: url('{{section.settings.desktop-image | img_url:'master'}}') no-repeat center center; 
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      display: flex;
      align-items: flex-end;
    }
    .hero-text {
      width: 50%;
      color: {{ section.settings.text-color }};
      margin-bottom: 4rem;
      
    }
    .hero-text > p {
      margin-bottom: 1rem;
    }
    .take-back-hero-title {
      color: {{ section.settings.heading-text-color }};
      font-size: 136px;
      line-height: 0.75;
    }
    @media only screen and (max-width:768px){
      .hero-text{
        width: 100%;
      }
      .hero-text > a {
        width: 75%;
      }
     
    }
    @media only screen and (min-width: 550px) and (max-width: 860px){
      .take-back-hero{
      height: 760px;
      background: url('{{section.settings.tablet-image | img_url:'master'}}') no-repeat center center; 
      background-size: cover;
      }
    }
    @media only screen and (max-width: 549px){
      .take-back-hero{
      height: 760px;
      background: url('{{section.settings.mobile-image | img_url:'master'}}') no-repeat center center; 
      background-size: cover;
      }
    }
  </style>